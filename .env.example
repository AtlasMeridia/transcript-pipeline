# Transcript Pipeline Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Transcription Settings
# =============================================================================

# Transcription engine: 'auto', 'mlx-whisper', or 'captions'
# - auto: Try YouTube captions first, fall back to MLX Whisper
# - mlx-whisper: Local transcription using MLX Whisper (Apple Silicon)
# - captions: YouTube auto-generated captions only
TRANSCRIPTION_ENGINE=auto

# MLX Whisper model (when using mlx-whisper engine)
# Options: tiny, base, small, medium, large, large-v3, large-v3-turbo, distil-large-v3
MLX_WHISPER_MODEL=large-v3-turbo

# Caption language for YouTube captions
CAPTION_LANGUAGE=en

# Fallback engine when captions unavailable
CAPTION_FALLBACK_ENGINE=mlx-whisper

# =============================================================================
# LLM Settings (for AI extraction)
# =============================================================================

# Default LLM provider: 'claude' or 'gpt'
DEFAULT_LLM=claude

# Anthropic API key (required if DEFAULT_LLM=claude)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API key (required if DEFAULT_LLM=gpt)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Model IDs (optional - defaults shown)
CLAUDE_MODEL_ID=claude-sonnet-4-5
OPENAI_MODEL_ID=gpt-4o-mini

# =============================================================================
# Output Settings
# =============================================================================

# Directory for output files (transcripts, summaries, audio)
OUTPUT_DIR=./output

# =============================================================================
# Server Settings (API mode only)
# =============================================================================

# CORS origins (comma-separated, use * for development)
CORS_ORIGINS=*

# Server port
PORT=8000

# Job TTL in hours (completed jobs are cleaned up after this time)
JOB_TTL_HOURS=24
